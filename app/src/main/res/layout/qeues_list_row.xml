<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="9dp"
        app:cardBackgroundColor="#B9FFFFFF"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/queuesListrow_Date_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="Date: "
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/queuesListrow_Name_textView" />

            <TextView
                android:id="@+id/queuesListrow_Time_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="Time: "
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/queuesListrow_Date_textView" />

            <TextView
                android:id="@+id/queuesListrow_barbershopName_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/queuesListrow_Name_textView"
                app:layout_constraintEnd_toStartOf="@+id/queuesListrow_delete_imgBtn"
                app:layout_constraintStart_toEndOf="@+id/queuesListrow_Name_textView"
                app:layout_constraintTop_toTopOf="@+id/queuesListrow_Name_textView" />

            <TextView
                android:id="@+id/queuesListrow_queueTime_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/queuesListrow_Time_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/queuesListrow_Time_textView"
                app:layout_constraintTop_toTopOf="@+id/queuesListrow_Time_textView" />

            <TextView
                android:id="@+id/queuesListrow_queueAddress_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/queuesListrow_Address_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/queuesListrow_Address_textView"
                app:layout_constraintTop_toTopOf="@+id/queuesListrow_Address_textView" />

            <TextView
                android:id="@+id/queuesListrow_isAvilable_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/queuesListrow_Address_textView"
                app:layout_constraintTop_toBottomOf="@+id/queuesListrow_Address_textView" />

            <TextView
                android:id="@+id/queuesListrow_queueDate_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/queuesListrow_Date_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/queuesListrow_Date_textView"
                app:layout_constraintTop_toTopOf="@+id/queuesListrow_Date_textView" />

            <TextView
                android:id="@+id/queuesListrow_Name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="Barbershop: "
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/queuesListrow_Address_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="Address: "
                android:textColor="#000000"
                android:textSize="21sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/queuesListrow_Time_textView" />

            <Button
                android:id="@+id/queuesListrow_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="CANCLE"
                app:background="@drawable/button"
                app:backgroundTint="#86FF0000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/queuesListrow_isAvilable_tv" />

            <ImageButton
                android:id="@+id/queuesListrow_delete_imgBtn"
                android:layout_width="27dp"
                android:layout_height="29dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="#00FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_delete" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>